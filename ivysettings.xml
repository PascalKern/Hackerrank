<ivysettings>
    <!--
    <settings defaultResolver="central"/>
    <settings defaultResolver="internal"/>
    -->
    <resolvers>
        <!--
		<filesystem name="local_libs" checkmodified="true">
			<ivy pattern="${ivy.settings.dir}/libs/[artifact]-[revision].[ext]" />
			<artifact pattern="${ivy.settings.dir}/libs/[artifact]-[revision].[ext]" />
